<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fond"
    tools:context=".DetailOkudenFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16sp"
            android:scrollbars="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="UselessParent">
            <TextView
                android:id="@+id/okudenName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:textSize="28sp"
                android:text="Title Okuden"
                />
            <TextView
                android:id="@+id/prerequesite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:fontFamily="@font/mirzaregular"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="Prerequisite"
                />
            <TextView
                android:id="@+id/okudenRank1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:fontFamily="@font/mirzaregular"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="Rank 1"
                />
            <TextView
                android:id="@+id/okudenRank2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:fontFamily="@font/mirzaregular"
                android:justificationMode="inter_word"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="Rank 2"
                />
            <TextView
                android:id="@+id/okudenRank3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:fontFamily="@font/mirzaregular"
                android:justificationMode="inter_word"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="Rank 3"
                />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>