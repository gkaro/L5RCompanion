<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fond"
    tools:context=".DetailAdvSchoolFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16sp"
            android:scrollbars="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="UselessParent">
            <TextView
                android:id="@+id/schoolName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"

                android:textSize="28sp"
                android:text="@string/hello_blank_fragment"
                />
            <TextView
                android:id="@+id/schoolDiscipline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/schoolBenefit"
                app:layout_constraintStart_toStartOf="@id/schoolBenefit"
                android:textSize="24sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="@string/hello_blank_fragment"
                />
            <TextView
                android:id="@+id/schoolRingsRequired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/schoolDiscipline"
                app:layout_constraintStart_toStartOf="@id/schoolDiscipline"
                android:textSize="20sp"
                app:fontFamily="@font/mirzaregular"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="@string/hello_blank_fragment"
                />
            <TextView
                android:id="@+id/schoolSkillsRequired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/schoolRingsRequired"
                app:layout_constraintStart_toStartOf="@id/schoolRingsRequired"
                android:textSize="20sp"
                app:fontFamily="@font/mirzaregular"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="@string/hello_blank_fragment"
                />
            <TextView
                android:id="@+id/schoolOtherRequired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/schoolSkillsRequired"
                app:layout_constraintStart_toStartOf="@id/schoolSkillsRequired"
                android:textSize="20sp"
                app:fontFamily="@font/mirzaregular"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="@string/hello_blank_fragment"
                />
            <Button
                android:id="@+id/seemore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Description" />
            <TextView
                android:id="@+id/advSchoolDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/schoolOutfit"
                app:layout_constraintStart_toStartOf="@id/schoolOutfit"
                android:textSize="20sp"
                app:fontFamily="@font/mirzaregular"
                android:justificationMode="inter_word"
                android:text="@string/hello_blank_fragment"
                />
            <Button
                android:id="@+id/seeless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hide Description" />

            <ImageView
                android:id="@+id/mon1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/minimon" />

            <TextView
                android:id="@+id/schoolTitleRank1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/mon1"
                app:layout_constraintStart_toStartOf="@id/mon1"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:text="@string/hello_blank_fragment"
                />
            <TextView
                android:id="@+id/schoolRank1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/schoolTitleRank1"
                app:layout_constraintStart_toStartOf="@id/schoolTitleRank1"
                android:textSize="20sp"
                app:fontFamily="@font/mirzaregular"
                android:justificationMode="inter_word"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="@string/hello_blank_fragment"
                />
            <ImageView
                android:id="@+id/mon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/minimon2" />
            <TextView
                android:id="@+id/schoolTitleRank2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@id/mon2"
                app:layout_constraintStart_toStartOf="@id/mon2"
                android:textSize="24sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="@string/hello_blank_fragment"
                />
            <TextView
                android:id="@+id/schoolRank2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/schoolTitleRank2"
                app:layout_constraintStart_toStartOf="@id/schoolTitleRank2"
                android:textSize="20sp"
                app:fontFamily="@font/mirzaregular"
                android:justificationMode="inter_word"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="@string/hello_blank_fragment"
                />
            <ImageView
                android:id="@+id/mon3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/minimon3" />
            <TextView
                android:id="@+id/schoolTitleRank3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@id/mon3"
                app:layout_constraintStart_toStartOf="@id/mon3"
                android:textSize="24sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="@string/hello_blank_fragment"
                />
            <TextView
                android:id="@+id/schoolRank3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/schoolTitleRank3"
                app:layout_constraintStart_toStartOf="@id/schoolTitleRank3"
                android:textSize="20sp"
                app:fontFamily="@font/mirzaregular"
                android:justificationMode="inter_word"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="@string/hello_blank_fragment"
                />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>