<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fond"
    tools:context=".ListSkillsFragment">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/highSkills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="1dp"
        android:textSize="24sp"
        android:gravity="center"
        android:text="High Skills"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        app:srcCompat="@drawable/separation" />

    <TextView
        android:id="@+id/bugeiSkills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="1dp"
        android:textSize="24sp"
        android:gravity="center"
        android:text="Bugei Skills"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:srcCompat="@drawable/separation" />
        <TextView
            android:id="@+id/merchantSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginBottom="1dp"
            android:textSize="24sp"
            android:gravity="center"
            android:text="Merchant Skills"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:srcCompat="@drawable/separation" />
        <TextView
            android:id="@+id/lowSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginBottom="1dp"
            android:textSize="24sp"
            android:gravity="center"
            android:text="Low Skills"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:srcCompat="@drawable/separation" />
    </LinearLayout>
</FrameLayout>