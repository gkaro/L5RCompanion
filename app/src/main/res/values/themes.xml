<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.L5RCompanion" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">#2F2D30</item>
        <item name="android:fontFamily">@font/juleeregular</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">#2F2D30</item>
    </style>
    <style name="Theme.L5RCompanion.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="spinnerTheme" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#2F2D30</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>